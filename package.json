{
    "name": "password-encrypt-app",
    "productName": "Password Encrypt App",
    "description": "",
    "author": {
        "name": "Arthur ROUSSEL",
        "email": "arthur.koalas@free.fr"
    },
    "contributors": [
        {
            "name": "László"
        }
    ],
    "private": true,
    "version": "1.0.0",
    "main": "src/js/main.js",
    "dependencies": {
        "csv-parser": "^2.3.3",
        "csv-writer": "^1.6.0"
    },
    "devDependencies": {
        "electron-builder": "^22.8.1",
        "electron": "^10.1.2"
    },
    "scripts": {
        "start": "electron src/js/main.js",
        "build": "electron-builder"
    },
    "build": {
        "appId": "com.electron.password-encrypt-app",
        "files": [
            "src/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "resources"
        },
        "publish": ["github"],
        "mac": {
            "category": "public.app-category.utilities",
            "target": {
                "target": "dmg",
                "arch": "x64"
            }
        },
        "win": {
            "target": {
                "target": "nsis",
                "arch": "x64"
            }
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true
        },
        "linux": {
            "target": "AppImage",
            "category": "Utility"
        }
    }
}
